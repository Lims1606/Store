<p style="color: green"><%= notice %></p>

<% content_for :title, "Articles" %>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each_with_index do |article, index| %>
    <h3>Article no. <%= index + 1 %></h3>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
    <p>&nbsp;</p>
  <% end %>
</div>

<%= link_to "New article", new_article_path, class: "bold" %>
